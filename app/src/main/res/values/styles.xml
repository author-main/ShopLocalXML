<resources xmlns:tools="http://schemas.android.com/tools">

<style name="ShapeAppearanceOverlay.App.rounded" parent="">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">8dp</item>
</style>

<style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.rounded</item>
    <item name="boxBackgroundColor">@color/EditTextBackgroundDark</item>
    <!--<item name="boxStrokeColor">@color/boxstrokecolor</item>-->
    <item name="boxStrokeWidth">1dp</item>
    <item name="android:textColorHint">#ffff0000</item>
    <item name="hintTextColor">#ffff0000</item>
</style>


    <style name="EditTextExt" parent="@android:style/Widget.EditText">
        <!--<item name="android:textColorHint">#70BEBEBE</item>-->
        <item name="android:textColorHint">#FF0000</item>
    </style>

<style name="ButtonPasswordKey" parent="@android:style/Widget.Button">
    <item name="android:layout_width">54dp</item>
    <item name="android:layout_height">54dp</item>
    <item name="android:background">?selectableItemBackgroundBorderless</item>
    <item name="android:fontFamily">@font/roboto_light</item>
    <item name="android:textSize">32sp</item>
    <item name="android:textColor">@color/EditTextFont</item>
    <item name="android:padding">0dp</item>
    <item name="android:layout_marginHorizontal">10dp</item>
    <item name="android:layout_marginVertical">2dp</item>
    <item name="iconGravity">textStart</item>
    <item name="iconPadding">0dp</item>
    <item name="iconSize">24dp</item>
    <item name="iconTint">@color/EditTextFont</item>
</style>


    <style name="TextViewKeyE" parent="@android:style/Widget.TextView">
        <item name="android:alpha">0.6</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/EditTextFont</item>
        <item name="android:text">@string/eCharPassword</item>
        <item name="android:textSize">23sp</item>
    </style>
    <style name="TextViewKeyF" parent="@style/TextViewKeyE">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:text">@string/fCharPassword</item>
    </style>


    <style name="LoginButton" parent="@android:style/Widget.Button">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ripple_roundbutton</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_marginHorizontal">2dp</item>
        <item name="android:paddingVertical">0dp</item>
    </style>

    <style name="DialogButton" parent="@android:style/Widget.Button">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ripple_roundbutton</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingHorizontal">4dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_marginHorizontal">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingVertical">0dp</item>
    </style>



    <style name="TextViewDialog" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/robotocondensed_light</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/EditTextFont</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">8dp</item>

        <!--<item name="android:textSize">23sp</item>-->
    </style>

    <style name="DialogExt" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/DialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButton</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/robotocondensed_light</item>
    </style>

    <style name="TextProduct_SalePrice" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/TextPrice</item>
        <item name="android:background">@drawable/roundrect_text</item>
        <item name="android:backgroundTint">@color/BgTextPrice</item>
        <item name="android:paddingHorizontal">4dp</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextProduct_Description" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/TextDescription</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">13sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="TextProduct_Price" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/TextPrice</item>
        <item name="android:alpha">0.3</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextProduct_Action" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextProduct_Brend" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorBrend</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextProduct_Discount" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/roundrect_text</item>
        <item name="android:backgroundTint">@color/colorDiscount</item>
        <item name="android:paddingHorizontal">4dp</item>
        <item name="android:textSize">11sp</item>
    </style>


</resources>