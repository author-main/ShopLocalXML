<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="user"
            type="com.example.shoplocalxml.ui.dialog.DialogReg"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp">

        <TextView
            android:id="@+id/textView1"
            style="@style/TextViewDialog"
            android:text="@string/text_family"
            app:layout_constraintBottom_toBottomOf="@+id/editTextTextFName"
            app:layout_constraintEnd_toStartOf="@+id/editTextTextFName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/editTextTextFName" />

        <com.example.shoplocalxml.custom_view.EditTextExt
            android:id="@+id/editTextTextFName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="text"
            app:barrierAllowsGoneWidgets="false"
            app:chainUseRtl="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/barrier2"
            app:layout_constraintTop_toTopOf="parent"/>


        <TextView
            android:id="@+id/textView2"
            style="@style/TextViewDialog"
            android:text="@string/text_name"
            app:layout_constraintBottom_toBottomOf="@+id/editTextTextLName"
            app:layout_constraintStart_toStartOf="@+id/textView1"
            app:layout_constraintTop_toTopOf="@+id/editTextTextLName" />

        <com.example.shoplocalxml.custom_view.EditTextExt
            android:id="@+id/editTextTextLName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="text"
            app:barrierAllowsGoneWidgets="false"
            app:barrierDirection="start"
            app:chainUseRtl="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/barrier2"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextFName" />

        <TextView
            android:id="@+id/textView3"
            style="@style/TextViewDialog"
            android:text="@string/text_phone"
            app:layout_constraintBottom_toBottomOf="@+id/editTextTextPhone"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/editTextTextPhone" />

        <com.example.shoplocalxml.custom_view.EditTextExt
            android:id="@+id/editTextTextPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="phone"
            app:barrierAllowsGoneWidgets="false"
            app:barrierDirection="start"
            app:chainUseRtl="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/barrier2"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextLName" />

        <TextView
            android:id="@+id/textView4"
            style="@style/TextViewDialog"
            android:text="@string/text_email"
            app:layout_constraintBottom_toBottomOf="@+id/editTextTextMail"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/editTextTextMail" />

        <com.example.shoplocalxml.custom_view.EditTextExt
            android:id="@+id/editTextTextMail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="text|textEmailAddress"
            app:barrierAllowsGoneWidgets="false"
            app:barrierDirection="start"
            app:chainUseRtl="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/barrier2"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPhone" />

        <TextView
            android:id="@+id/textView5"
            style="@style/TextViewDialog"
            android:text="@string/text_password"
            app:layout_constraintBottom_toBottomOf="@+id/editTextTextPassword"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/editTextTextPassword" />

        <com.example.shoplocalxml.custom_view.EditTextExt
            android:id="@+id/editTextTextPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="number|numberPassword"
            android:maxLength="5"
            app:barrierAllowsGoneWidgets="false"
            app:chainUseRtl="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/barrier2"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextMail" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="right"
            app:constraint_referenced_ids="textView1,textView2,textView3,textView4,textView5" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword"
            tools:layout_editor_absoluteX="198dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>