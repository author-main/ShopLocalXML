<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutChildItemRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutChildItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="12dp">

        <TextView
            android:id="@+id/textChildItemName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_light"
            android:text="TextView"
            android:textColor="@color/EditTextFont" />

        <TextView
            android:id="@+id/textChildItemCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:paddingHorizontal="12dp"
            android:text="TextView"
            android:textColor="@color/EditTextFont" />

        <CheckBox
            android:id="@+id/checkboxChildItem"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:button="@android:color/transparent"
            android:drawableStart="@drawable/ic_checkbox"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="@null" />


    </LinearLayout>

    <View
        android:id="@+id/dividerChildItem"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/PrimaryDark" />
</LinearLayout>