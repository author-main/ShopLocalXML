<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layerHistorySearch"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp">

    <TextView
        android:id="@+id/textSearchQuery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:alpha="0.8"
        android:clickable="false"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/EditTextFont"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/buttonDeleteSearchQuery"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@drawable/ic_circle"
        android:backgroundTint="@color/EditTextBackgroundDark"
        android:padding="2dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_close"
        android:tint="@color/EditTextFont" />
</LinearLayout>