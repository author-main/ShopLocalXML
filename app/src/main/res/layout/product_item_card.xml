<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="product"
            type="com.example.shoplocalxml.classes.Product"/>
    </data>
<FrameLayout
    android:layout_width="150dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.shoplocalxml.ui.product_item.product_card.ProductCard
            android:id="@+id/productCard"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp" >

        </com.example.shoplocalxml.ui.product_item.product_card.ProductCard>


        <TextView
            android:id="@+id/textSalePrice"
            style="@style/TextProduct_SalePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="1 000,00ла"/>

        <TextView
            android:id="@+id/textPrice"
            style="@style/TextProduct_Price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="1 200.00"/>

        <TextView
            android:id="@+id/textAction"
            style="@style/TextProduct_Action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/text_action" />

        <TextView
            android:id="@+id/textBrend"
            style="@style/TextProduct_Brend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="unknown" />

        <com.example.shoplocalxml.ui.product_item.RatingView
            android:id="@+id/ratingView"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_gravity="center"
            app:count="3.7" />


    </LinearLayout>


</FrameLayout>
</layout>